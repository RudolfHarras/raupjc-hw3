@using Assignment2.Models
@model IndexViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Todo/_Layout.cshtml"; 
}

<!DOCTYPE html>

<html>
<head>
    <title>Tasks</title>
</head>
<body>
<h2>Tasks</h2>
<div style="margin-bottom:50px">
    <a asp-action="Add" style="display:inline-block; text-decoration:none; color:#dc143c; margin-right:20px;">Add new task</a>
    <a asp-action="Completed" style="display:inline-block; text-decoration:none; color:#dc143c;">Completed tasks</a>
</div>
@foreach (var item in Model.TodoViewModels)
{
    <div style="margin-bottom:30px">
        @Html.Partial("PartialView", item)
        
     <a asp-action="MarkAsCompleted" asp-route-id="@item.Id" 
        
           style="color:purple; margin-bottom:20px;">Mark as complete</a>
    </div>
}
</body>
</html>