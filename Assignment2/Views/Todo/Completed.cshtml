@using Assignment2.Models
@model CompletedViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Completed";
    Layout = "~/Views/Todo/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Completed tasks</title>
</head>




<body>
<h2>Completed tasks</h2>
@foreach (var item in Model.TodoViewModels)
{
    <div>
        @Html.Partial("PartialViewCompleted", item)
        <a asp-action="RemoveFromCompleted" asp-route-id="@item.Id" style="color:blue;">Remove from completed</a>
        
        <p>
            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-default btn-sm">
                <span class="glyphicon glyphicon-trash"></span> Delete
            </a>
        </p>

    </div>
}
</body>
</html>